
<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Edit <%= cg.name %></h1>
        <div style="width:30%;margin:25px auto;">
            <form action="/campgrounds/<%= cg._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= cg.name %>" name="campground[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%= cg.price %>" name="campground[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= cg.image %>" name="campground[imageurl]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= cg.desc %>" name="campground[desc]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
        
    </div>
    
</div>

<% include ../partials/footer %>